<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="navigationIcon">@drawable/ic_arrow</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/main_blue</item>

        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorSecondaryVariant">@color/main_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="colorControlActivated">@color/main_blue</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>